<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fos_user.login.form.factory" class="FOS\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>%fos_user.login.form.name%</argument>
            <argument>%fos_user.login.form.type%</argument>
            <argument>%fos_user.login.form.validation_groups%</argument>
        </service>

        <service id="fos_user.login.form.type" class="FOS\UserBundle\Form\Type\LoginFormType">
            <argument>%fos_user.model.user.class%</argument>
            <tag name="form.type" alias="fos_user_login" />
        </service>

    </services>

</container>
